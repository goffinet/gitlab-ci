{
    "title": "GitLab CI",
    "description": "Formation GitLab CI",
    "author": "Fran√ßois-Emmanuel Goffinet",
    "language": "fr",
    "plugins": [
        "atoc",
        "-lunr", "-search", "search-plus",
        "hints",
        "livereload",
        "katex",
        "google-drive-video",
        "image-captions",
        "ga",
        "sitemap",
        "redirect"
    ],
    "pdf": {
        "margin": {
            "left": 56,
            "right": 56,
            "top": 56,
            "bottom": 56
        },
        "pageNumbers": true,
        "fontSize": 11,
        "fontFamily": "Roboto",
        "paperSize": "a4",
        "headerTemplate": "_TITLE_ - _SECTION_",
        "footerTemplate": "_AUTHOR_ - _PAGENUM_"
    },
    "pluginsConfig": {
        "image-captions": {
            "caption": "Figure _BOOK_IMAGE_NUMBER_ : _CAPTION_"
        },
        "ga": {
            "token": "UA-21733018-17"
        },
        "sitemap": {
            "hostname": "https://gitlab-ci.goffinet.org/"
        }
    },
    "variables": {
       "author": "Francois-Emmanuel Goffinet",
       "repo": "https://github.com/goffinet/gitlab-ci/tree/master/"
    }
}
